---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/hero-image.avif";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/features-image.avif";
import construction from "@images/construction-image.avif";
import tools from "@images/automated-tools.avif";
import dashboard from "@images/dashboard-image.avif";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Hit fast forward to your busniess growth"
    url="https://calendly.com/sumitthakur5044/30min?preview_source=et_card&month=2024-05"
  />

  <HeroSection
    title=`Let's Turbocharge Your Growth with  <span
        class="text-yellow-500 dark:text-yellow-400">AI Magic!</span>`
    subTitle="Experience the Future Today â€“ Transform Your Business with AI!"
    primaryBtn="Book Meeting"
    primaryBtnURL="https://calendly.com/sumitthakur5044/30min?preview_source=et_card&month=2024-05"
    secondaryBtn="Ask query"
    secondaryBtnURL="/contact"
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.8</span> / 5`
    starCount={4}
    reviews=`From Over <span class="font-bold">12.8k</span> Reviews`
    src={heroImage}
    alt="Stack of ScrewFast product boxes containing assorted hardware tools"
  />

  <ClientsSection
    title="Trusted by Industry Leaders"
    subTitle="Experience the reliability chosen by industry leaders at."
  />

  <FeaturesGeneral
    title="Meeting Industry Demands"
    subTitle="At ScaleWithAI , we craft customized solutions to meet your unique busniess needs that help you scale your business through our consultation , tech build - support to digital marketing covering all aspects of business. "
    src={featureImage}
    alt="ScaleWithAI product boxes containing assorted description"
    features={features}
  />

  <FeaturesNavs
    title=`Scale your business by <span class="text-yellow-500 dark:text-yellow-400">100X</span> with our <span class="text-yellow-500 dark:text-yellow-400">Tech</span> ,with our <span class="text-yellow-500 dark:text-yellow-400">consulation</span> and much  more . . .`
    tabs={[
      {
        heading: "Cutting-Edge Workflow",
        content:
          "Empower your projects with ScaleWithAI's cutting-edge advance workflow. Experience enhanced efficiency in scaling business with our sophisticated automated solutions.",
        svg: "tools",
        src: tools,
        alt: "Scale with AI cutting edge tools",
        first: true,
      },
      {
        heading: "Intuitive Insights",
        content:
          "Unlock the potential of your business with our intuitive insights. From market trends to customer behavior, we provide actionable data-driven strategies to scale your venture efficiently and effectively, propelling you towards exponential growth.",
        svg: "dashboard",
        src: dashboard,
        alt: "A screenshot or graphic representation of the intuitive dashboard",
        second: true,
      },
      {
        heading: "Personalized Guidance",
        content:
          "Our expert advisors offer tailored recommendations, leveraging industry expertise and data insights to address your unique challenges and opportunities, ensuring your business achieves its full potential.",
        svg: "house",
        src: construction,
        alt: "Scale with AI personalized guidance section", 
      },
    ]}
  />

  <TestimonialsSection
    title="Fast-Track Your Business Growth"
    subTitle="At scaleWithAI , our expert tech and marketing services with our data driven insights help you to grow your business 100X faster!"
    ;
    testimonials={[
      {
        content:
          "ScaleWithAI's tech consulations and their relaible service of web,app build and digital marketing help me streamline my business. I can't recommend it enough .",
        author: "Shirin Singhal",
        role: "Co-Founder | Megabyte tech",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "70k+",
        description:
          "customers served with our tech and marketing consultation services through direct & indirect channels", 
      },
      {
        count: "35%",
        description:
          "increase in effeciency of projects with our tech and marketing services",
      },
      {
        count: "87.3%",
        description:
          "reduction in maintenance costs reported by long-term clients",
      },
      {
        count: "5x",
        description: "faster resolution and reliability of projects",
      },
    ]}
  />

  <PricingSection pricing={pricing} />

  <FAQ title="Frequently<br />asked questions" faqs={faqs} />

  <HeroSectionAlt
    title="Let's Build Big"
    subTitle="ScaleWithAI is a tech and marketing consulting firm."
    url="hhttps://calendly.com/sumitthakur5044"
  />
</MainLayout>
